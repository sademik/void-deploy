"----- Syntax -----"

syntax on
colorscheme shblah

"----- Tabbing -----"

set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

"----- Misc -----"

set exrc
set guicursor=
set noerrorbells
set hidden
set wrap
set laststatus=2

"----- Lines -----"

set number relativenumber
set ruler
set scrolloff=8

"----- Search -----"

set nohlsearch
set incsearch

"----- Mapping -----"

map <Down> <NOP>
map <Up> <NOP>
map <Left> <NOP>
map <Right> <NOP>
inore jj <Esc>
